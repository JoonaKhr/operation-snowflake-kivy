#:kivy 2.1.0

<Widget>:
    font_name: "resources\SinsGold.ttf"
    font_size: "36sp"
    disabled_color: 0, 0, 0, 1
    background_normal: "resources/imgs/button_normal.png"
    background_down: "resources/imgs/button_pressed.png"
    background_disabled_normal: "resources/imgs/button_pressed.png"

<OperationSnowflake>: #root
    startToggle: startToggle
    playArea: playArea
    ldrbrds_btn: ldrbrds_btn
    settings_btn: settings_btn

    BoxLayout:
        orientation:'vertical'    
        RelativeLayout:
            id: playArea
            
        ProgressBar:
            id: timer
            max:10
            value:0
            size_hint: 1, 0.05
        GridLayout:
            rows: 2
            cols: 2
            size_hint: 1, 0.2
            padding: [2, 2, 2, 2]
            spacing: [5, 5]
            Button:
                background_disabled_normal: "resources/imgs/label.png"
                disabled: True
                color: 0,0,0,1
                text: root.scoreText
            Button:
                id: ldrbrds_btn
                color: 0,0,0,1
                on_press: 
                    app.root.current = 'leaderboards'
                    app.root.transition.direction = 'left'
                    root.button_click_sound()
                text: "Leaderboards"
            ToggleButton:
                color: 0,0,0,1
                id: startToggle
                on_press: 
                    root.button_click_sound()
                    root.startGameToggle(self)
                text: "Start"
                
            Button:
                color: 0,0,0,1
                id: settings_btn
                on_press: 
                    app.root.transition.direction = 'left'
                    app.root.current = 'settings'
                    root.button_click_sound()
                text: "Settings"

<SettingsScreen>:
    audio_slider: audio_slider
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            padding: [2, 2, 2, 2]
            spacing: [5, 5]
            cols: 2
            rows: 2
            Button:
                size_hint_x: 0.5
                background_disabled_normal: "resources/imgs/label.png"
                disabled: True
                text: 'Audio Volume'
            Slider:
                id: audio_slider
                cursor_image: 'resources/imgs/A1.png'
                min: 0
                max: 100
                step: 1
                value: 25
                orientation: 'horizontal'
            Button:
                size_hint_x: 0.5
                background_disabled_normal: "resources/imgs/label.png"
                disabled: True
                text: 'Music Volume'
            Slider:
                id: music_slider
                cursor_image: 'resources/imgs/A1.png'
                min: 0
                max: 100
                step: 1
                orientation: 'horizontal'
        Button:
            color: 0,0,0,1
            text: "Back to Menu"
            on_press:
                root.button_click_sound()
                app.root.transition.direction = 'right'
                app.root.current = 'menu'

<LeaderboardsScreen>:
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            TextInput:
                color: 0,0,0,1
                halign: "center"
            Button:
                text: "Confirm"
                color: 0,0,0,1
                size_hint: 0.25, 1
        Label:
            text: "First"
        Label:
            text: "Second"
        Label:
            text: "Three"
        Label:
            text: "Fourth"
        Label:
            text: "Fifth"
        Button:
            color: 0,0,0,1
            text: "Back To Menu"
            on_press:
                root.button_click_sound()
                app.root.transition.direction = 'right'
                app.root.current = 'menu'